{
  "name":"pet",
  "version":"1.0",
  "description": "hear what your tabs say through the popup window",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs"
  ],
  "background":{
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action":{
    "default_popup": "popup/popup.html"
  }
}
